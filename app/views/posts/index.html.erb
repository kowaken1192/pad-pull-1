<% if user_signed_in? %>
  <!-- ユーザーがログインしていた時の処理 -->

  <h4> 名前 <%= current_user.name %> </h4>
<%= image_tag "https://rails-02-sample.herokuapp.com/assets/common/default-avatar-7a6cbfd7993e89f24bfc888f4a035a83c6f1428b8bdc47eed9095f2799a40153.png" %>
<%= link_to "プロフィール", user_path(current_user), class: 'post' %>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
  <%= link_to "アカウント情報", account_path, class: 'post' %>
<% else %>
  <!-- ユーザーがログインしていなかった時の処理 -->
  <h2> 現在ログインしていません </h2>
  <%= image_tag "https://rails-02-sample.herokuapp.com/assets/common/default-avatar-7a6cbfd7993e89f24bfc888f4a035a83c6f1428b8bdc47eed9095f2799a40153.png" %>
  <%= link_to "ログイン", new_user_session_path, class: 'post' %>
  <%= link_to "新規登録", new_user_registration_path, class: 'post' %>
<% end %>
