<h1>施設作成</h1>
 <%= form_with model: @room do |form| %>
  <div class="field">
    <%= form.label :施設名%>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :施設詳細 %>
    <%= form.text_area :introduction %>
  </div>

  <div class="field">
    <%= form.label :料金 %>
    <%= form.number_field :price %>
  </div>
  <div class="field">
    <%= form.label :住所 %>
    <%= form.text_field :address %>
  </div>
  

 <div class="form-group">
    <%= form.label :avatar %>
    <%= form.file_field :avatar, class: "form-control" %>
  </div>



  <div class="actions">
    <%= form.submit %>
  </div>


<%= link_to '戻る', rooms_path %>
<% end %>