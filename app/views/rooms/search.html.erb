<!-- app/views/rooms/search.html.erb -->
<%= form_with url: search_path, method: :get do |form| %>
  <div>
    <%= form.label :area, 'エリア' %>
    <%= form.select :area, options_for_select(['東京', '大阪', '京都', '札幌']) %>
  </div>
  <div>
    <%= form.label :query, 'フリーワード検索' %>
    <%= form.text_field :query %>
  </div>
  <%= form.submit '検索' %>
<% end %>

<h2>検索結果</h2>
<p><%= @rooms.count %>件の施設が見つかりました。</p>

<table>
  <thead>
    <tr>
      <th>施設名</th>
      <th>住所</th>
      <th>施設詳細</th>
      <th>宿泊料金（/日）</th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= link_to room.name, room_path(room) %></td>
        <td><%= room.address %></td>
        <td><%= room.description %></td>
        <td><%= room.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>