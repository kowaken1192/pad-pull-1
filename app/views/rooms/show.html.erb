<div>
<%= image_tag "https://rails-02-sample.herokuapp.com/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png" %>
<div>
<h1 class="hotel-name">
  <%= @room.name %>
</h1>
<div class="introduction">
  <%= @room.introduction %>
</div>
<div class="price">
  宿泊料金： <%= @room.price %>円/日
</div>

<%= form_with(model: @reservation, method: :post, url: confirm_reservations_path) do |f| %>
  <div class="form-group">
    <%= f.label :check_in, "チェックイン" %>
    <%= f.datetime_select :check_in, class: "form-control datepicker", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :check_out, "チェックアウト" %>
    <%= f.datetime_select :check_out, class: "form-control datepicker", required: true %>
  </div>
 <div class="form-group">
  <%= f.label :head_count, "宿泊人数" %>
  <%= f.number_field :head_count, class: "form-control", min: 1, required: true %>
</div>


  <%= f.submit "予約する",  class: "btn btn-primary" %>
<% end %> 
<%= link_to '戻る', rooms_path, class: "back-link" %>

