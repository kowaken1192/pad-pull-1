<h3>予約済み施設一覧</h3>

<table>
  <thead>
    <tr>
      <th>施設画像</th>
      <th>施設名</th>
      <th>施設詳細</th>
      <th>金額</th>
      <th>チェックイン</th>
      <th>チェックアウト</th>
      <th>予約確定日時</th>
    </tr>
  </thead>
  <tbody>
    <% @reserves.each do |reserve| %>
      <tr>
        <td><%= image_tag "https://rails-02-sample.herokuapp.com/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png", width: 200 %></td>
        <td><%= Room.find(reserve.room_id).name %></td>
        <td><%= Room.find(reserve.room_id).introduction %></td>
        <td><%= Room.find(reserve.room_id).price * reserve.number_of_people * (reserve.check_out - reserve.check_in).to_i %>円</td>
        <td><%= reserve.check_in.strftime('%Y/%m/%d') %></td>
        <td><%= reserve.check_out.strftime('%Y/%m/%d') %></td>
        <td><%= reserve.created_at.strftime('%Y/%m/%d %H:%M') %></td>
      </tr>
    <% end %>
  </tbody>
</table>



